<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.libreelec.autoupdate" name="LibreELEC Auto Update" version="0.0.3" provider-name="snoopyjoe">
  <requires>
    <import addon="xbmc.python" version="3.0.1"/>
  </requires>
  <extension point="xbmc.service" library="service.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Check LibreELEC for latest release and downloads the latest version if newer than installed version</summary>
    <news>
      + Add Platform Selection
      + Enable/Disable Check
      + Restart Service after Enabling
    </news>
    <assets>
        <icon>resources/icon.jpg</icon>
    </assets>
  </extension>
</addon>
